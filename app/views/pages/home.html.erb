<div class="banner">
  <div class="banner-container">
    <h1>Luxury Watches</h1>
      <%= form_tag watches_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search Watches..."
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>


