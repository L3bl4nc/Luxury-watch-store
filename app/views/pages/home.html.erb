<div class="banner">
  <div class="banner-container">
    <h1>Luxury Watches</h1>
    <div class="row">
      <div class="col-3">
        <div class="searchbar-form">
        <%= form_tag watches_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control search-watches",
            placeholder: "Search Watches..."
          %>
          <%= submit_tag "Search", class: "btn btn-primary search-bar-button" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

