<!-- display title "sold watches" -->
<!-- display each watch that has sold -->
<div class="container">
  <div class="cards">
      <%= sold_watches do %>
        <div class="card-product">
          <img src="https://res.cloudinary.com/dnygdmomh/image/upload/v1598713997/Watches/Rolex_Datejust_akxpza.jpg" alt="Rolex watch">
          <div class="card-product-infos">
            <h2><%= watch.brand %></h2>
            <p><%= watch.condition %></p>
            <p><%= watch.price %>$</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>



